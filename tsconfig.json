{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"declaration": false,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"jsx": "react",
		"lib": ["DOM", "ESNext"],
		"module": "ESNext",
		"moduleResolution": "Node",
		"outDir": "public/js",
		"rootDir": "src",
		"sourceMap": true,
		"target": "ES6",
		"types": [],
		"typeRoots": ["node_modules/@types", "src/@types"]
	},
	"include": ["src"]
}
