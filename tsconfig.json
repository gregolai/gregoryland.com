{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		// "experimentalDecorators": true,
		"importHelpers": true,
		"jsx": "react",
		"lib": ["esnext", "dom"],
		"module": "ESNext",
		"moduleResolution": "Node",
		"outDir": "public/js",
		"target": "ES2018",
		"types": ["node"],
		"typeRoots": ["node_modules/@types", "src/@types"]
	},
	"include": ["src"]
}
